/* Device Memory Map

Device                      Dir

W training coefs.      0x100 - 0x14C
b output offset           0x150
In traning data           0x154
Start Register            0x158

*/
#include <stdio.h>
#include <stdint.h>

/* Device pointers*/
     /* Coefs*/
int * w_ji=0x0100;
int * w_kj=0x0128;
    /* offset*/
int * b=0x0150;
/*   Training input   */
int * training=0x0154;
/*   Start register   */
int * start = 0x158;
/*   LSFR random */
int * lsfr=0x1000;



int main()
{
	int i;
  printf("Hello from Nios II!\n");
  for (i=0;i<2*10*4;i=i+4){
  	*(w_ji+i) = *lsfr;
  	}


  for (i=0;i<2*10*4;i=i+4){
  	printf("%d \n", *(w_ji+i));
  	}
  int32_t x = 178956970;

  int32_t y = 178956970;

  y = x >> 24;

  printf("%d",y);
  return 0;
}
